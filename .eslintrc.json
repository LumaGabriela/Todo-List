{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "never"],
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "comma-spacing": ["error", {"before": false, "after":true}],
        "camelcase":"warn",
        "arrow-spacing":"error",
        "no-irregular-whitespace":"error",
        "class-methods-use-this":"error",
        "comma-dangle":"error",
        "array-callback-return":"error",
        "no-loop-func":"error",
        "for-direction":"error",
        "switch-colon-spacing":"error"
    }
}
